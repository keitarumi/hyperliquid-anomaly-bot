# Hyperliquid API credentials (REQUIRED)
HYPERLIQUID_PRIVATE_KEY=0x...  # Your API wallet private key
HYPERLIQUID_API_WALLET_ADDRESS=0x...  # Your API wallet address
HYPERLIQUID_MAIN_WALLET_ADDRESS=0x...  # Your main wallet address (with funds)

# Discord webhook for notifications (REQUIRED)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Trading configuration
MONITORING_INTERVAL=10  # Monitoring interval in seconds
ORDER_TIMEOUT=600  # Order timeout in seconds (10 minutes default)
POSITION_CLOSE_TIMEOUT=1800  # Position close timeout in seconds (30 minutes default)
PRICE_MULTIPLIER=3.0  # Price multiplier for anomaly orders (3x pre-anomaly price)
ORDER_AMOUNT_USDC=100  # Order size in USDC
MAX_CONCURRENT_ORDERS=1  # Maximum concurrent orders (1 = one order/position at a time)

# Symbol filter (comma-separated list, empty = all symbols)
# Example: BTC,ETH,SOL,DOGE
# Leave empty to monitor all symbols
SYMBOLS=

# Anomaly detection parameters
DETECTOR_WINDOW_SIZE=60  # Detection window size (number of historical samples)
VOLUME_Z_THRESHOLD=3.0  # Volume anomaly detection z-score threshold (3.0 = 3 standard deviations)