# Hyperliquid API認証情報
HYPERLIQUID_PRIVATE_KEY=0x...your_api_wallet_private_key
HYPERLIQUID_API_WALLET_ADDRESS=0x...your_api_wallet_address
HYPERLIQUID_MAIN_WALLET_ADDRESS=0x...your_main_wallet_address

# Discord通知用Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# トレーディング設定
MONITORING_INTERVAL=10  # 監視間隔（秒）
ORDER_TIMEOUT=600  # オーダータイムアウト（秒）※10分
PRICE_MULTIPLIER=3.0  # 異常検知時の価格乗数
ORDER_AMOUNT_USDC=100  # 注文サイズ（USDC）
MAX_CONCURRENT_ORDERS=1  # 最大同時注文数（1=同時に1つの注文のみ）

# 異常検知パラメータ
DETECTOR_WINDOW_SIZE=60  # 検知ウィンドウサイズ
VOLUME_Z_THRESHOLD=3.0  # ボリューム異常検知のZスコア閾値

# シンボルフィルター（カンマ区切り、空欄=全銘柄）
# 例: BTC,ETH,SOL,DOGE
# 空欄にすると全銘柄を監視
SYMBOLS=BTC,ETH,SOL,DOGE
